<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="abrahamlay.kknp2015.warungsosro.DetailTicketActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@color/bg_header"
        android:layout_weight="0" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/textView4"
            android:textColor="@color/text_header"
            android:textSize="20sp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="16dp"
            android:gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/access"
            android:id="@+id/access"
            android:textColor="@color/text_header"
            android:textSize="20sp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_marginRight="16dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_detail_tiket">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="1dp"
            android:background="@color/bg_list_1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="center"
                    android:id="@+id/bg_status_detail"
                    android:background="@color/bg_error">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Pending"
                        android:id="@+id/statusDetail"
                        android:textSize="35dp"
                        android:textColor="@color/font_status_detail" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/user2"
                android:layout_gravity="center"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_list_1"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warung Bowo"
                    android:id="@+id/namawarung"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:textIsSelectable="false"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_list_2"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Bekasi"
                    android:id="@+id/kota"
                    android:layout_margin="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_list_1"
                android:gravity="center_vertical|center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Jl. Mangga No. 5"
                    android:id="@+id/alamat"
                    android:layout_margin="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_list_2"
                android:gravity="center_vertical|center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="(021) 821812345"
                    android:id="@+id/telp"
                    android:layout_margin="5dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/Linear1"
        android:background="@color/bg_detail_tiket">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_list_1"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Barang"
                    android:id="@+id/textView9"
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:autoText="false"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teh Botol"
                    android:id="@+id/namabarang"
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:textIsSelectable="false"
                    android:autoText="false"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_list_2"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Barang"
                    android:id="@+id/textView13"
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:autoText="false"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 kratt"
                    android:id="@+id/jumlahbarang"
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:textIsSelectable="false"
                    android:autoText="false"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_list_1"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu Request"
                    android:id="@+id/textView10"
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:autoText="false"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/02/2015 04:30"
                    android:id="@+id/wktreq"
                    android:textSize="18dp"
                    android:textIsSelectable="false"
                    android:autoText="false"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_list_2"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waktu Kirim"
                    android:id="@+id/textView17"
                    android:layout_margin="5dp"
                    android:textSize="22dp"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:autoText="false"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/02/2015 04:30"
                    android:id="@+id/wkttrm"
                    android:textSize="18dp"
                    android:textIsSelectable="false"
                    android:autoText="false"
                    android:layout_margin="5dp"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:id="@+id/btn"
            android:layout_gravity="top|bottom"
            android:layout_weight="1"
            android:background="@color/bg_Button"
            android:textColor="@color/bg_list_1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FORWARD"
            android:id="@+id/forward"
            android:layout_gravity="top|bottom"
            android:layout_weight="1"
            android:background="@color/bg_Button"
            android:textColor="@color/bg_list_1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:id="@+id/cancel"
            android:layout_gravity="top|bottom"
            android:layout_weight="1"
            android:background="@color/bg_Button"
            android:textColor="@color/bg_list_1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APPROVE"
            android:id="@+id/approve"
            android:layout_gravity="top|bottom"
            android:layout_weight="1"
            android:background="@color/bg_Button"
            android:textColor="@color/bg_list_1" />

    </LinearLayout>


</LinearLayout>
